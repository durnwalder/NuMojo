{
	"name": "Numojo",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": ["modular-mojotools.vscode-mojo", "GitHub.copilot"]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {
	            "version": "latest",
	            "ppa": "false"
	        }
	    },
	
	"mounts": ["source=${localWorkspaceFolderBasename}-magic,target=${containerWorkspaceFolder}/.magic,type=volume"],
    "postCreateCommand": "sudo chown vscode .mafic && magic install",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "magic --version",

	// Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}
